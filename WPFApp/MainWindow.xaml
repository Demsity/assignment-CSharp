<Window x:Class="WPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp"
        xmlns:models="clr-namespace:WPFApp.Models"
        mc:Ignorable="d"
        Title="AdressBoken" Height="450" Width="800"
        MinWidth="650"
        MinHeight="200">
    <!-- Main Wrapper -->
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="1" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="45" />
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <!-- Top Bar -->
        <Grid Grid.Row="0" 
              Background="#DDAE7E" 
              Grid.ColumnSpan="3" 
              Margin="0 0 0 0"
              Panel.ZIndex="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" 
                       VerticalAlignment="Center"
                       Margin="15 0 0 0"
                       Text="AdressBoken"
                       FontSize="24"/>
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="15 0 10 0" 
                           Text="Lägg till kontakt" />
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="10 0 10 0" 
                           Text="Ändra kontakt" />
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="10 0 0 0" 
                    Text="Ta bort kontakt" />
            </StackPanel>
        </Grid>
        <!-- Left window -->
        <ListView BorderThickness="0" x:Name="lv_contacts" Grid.Row="1" 
              Grid.Column="0" 
              Margin="10 10 15 10">
            <ListView.ItemTemplate>
                <DataTemplate DataType="models:Contact">
                    <StackPanel Margin="0 0 0 10">
                        <TextBlock FontSize="20" Text="{Binding DisplayName}" />
                        <TextBlock FontWeight="Light" FontSize="18" Text="{Binding FullAdress}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <!-- Middle devider -->
        <Grid Grid.Row="1" Grid.Column="1" Background="#9A8F97" />
        <!-- Right window -->
        <Grid Grid.Row="1" Grid.Column="2" 
              Margin="15 10 10 10">
            <TextBlock Grid.Column="0" Grid.Row="1" Text="Detta är en text" />
        </Grid>
    </Grid>
</Window>
